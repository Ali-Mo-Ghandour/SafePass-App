<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Light Theme -->
    <style name="Theme.MobileProject.Light" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryContainer">@color/blue_100</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Control colors -->
        <item name="colorControlNormal">?attr/colorOnSurfaceVariant</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/blue_100</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/gray_600</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Status/Navigation bars -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Components -->
        <item name="toolbarStyle">@style/Widget.MobileProject.Toolbar.Light</item>
        <item name="cardViewStyle">@style/Widget.MobileProject.CardView.Light</item>
        <item name="textInputStyle">@style/Widget.MobileProject.TextInput.Light</item>
    </style>

    <!-- Base Dark Theme - Pure Black Version -->
    <style name="Theme.MobileProject.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryContainer">@color/darker_gray</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Control colors -->
        <item name="colorControlNormal">@color/purple_200</item>
        <item name="colorControlActivated">@color/purple_200</item>
        <item name="colorControlHighlight">@color/purple_200</item>
        <item name="android:textColorHint">@color/purple_200</item>

        <!-- Surface Colors - Pure Black -->
        <item name="colorSurface">@color/black</item>
        <item name="colorSurfaceVariant">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/purple_200</item>

        <!-- Background colors - Pure Black -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackgroundFloating">@color/black</item>

        <!-- Status/Navigation Bars - Pure Black -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Components -->
        <item name="toolbarStyle">@style/Widget.MobileProject.Toolbar.Dark</item>
        <item name="cardViewStyle">@style/Widget.MobileProject.CardView.Dark</item>
        <item name="textInputStyle">@style/Widget.MobileProject.TextInput.Dark</item>
    </style>

    <!-- Light Component Styles -->
    <style name="Widget.MobileProject.Toolbar.Light" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.MobileProject.CardView.Light" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardForegroundColor">@color/black</item>
        <item name="strokeColor">@color/blue_500</item>
    </style>

    <style name="Widget.MobileProject.TextInput.Light" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_500</item>
        <item name="hintTextColor">@color/gray_600</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Dark Component Styles - Pure Black Version -->
    <style name="Widget.MobileProject.Toolbar.Dark" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">@color/purple_200</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.MobileProject.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/black</item>
        <item name="cardForegroundColor">@color/purple_200</item>
        <item name="strokeColor">@color/purple_200</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="Widget.MobileProject.TextInput.Dark" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_200</item>
        <item name="hintTextColor">@color/purple_200</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="android:textColorHint">@color/purple_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
</resources>